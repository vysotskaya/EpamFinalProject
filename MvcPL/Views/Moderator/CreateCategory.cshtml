@model MvcPL.Models.CategoryCreateViewModel

@{
    ViewBag.Title = "CreateCategory";
}

<h2>
    @Html.ActionLink("Home", "Index", "Home", null, htmlAttributes: new { @style = "color: #666;" })
    / @Html.ActionLink("All Sections", "Sections", "Moderator", null, htmlAttributes: new { @style = "color: #666;" })
    / @Html.ActionLink("All Sections", "Categories", "Moderator", new {id = Model.SectionRefId}, htmlAttributes: new { @style = "color: #666;" })
    / Create Section
</h2>

@using (Html.BeginForm("CreateCategory", "Moderator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryName, new { @class = "col-md-5 control-label" })
        <div class="col-md-7 form-inline text-left">
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Discription, new {@class = "col-md-5 control-label"})
        <div class="col-md-7 form-inline text-left">
            @Html.TextAreaFor(m => m.Discription, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Discription, null, new {@class = "text-danger"})
        </div>
    </div>
    @Html.HiddenFor(m => m.SectionRefId, new {value = Model.SectionRefId})
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}
