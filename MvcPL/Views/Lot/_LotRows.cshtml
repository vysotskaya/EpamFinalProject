@model IEnumerable<MvcPL.Models.LotRowViewModel>

@foreach (var lot in Model)
{
    <div class="lotPost">
        <div class="col-md-2">
            <img src="~/Content/images/lot.jpeg" class="lotPhoto"/>
        </div>
        <div class="lotContent col-md-6">
            <h3>@Html.DisplayFor(m => lot.Name)</h3>
            <p style="font-size: 14px;">Published: @Html.DisplayFor(m => lot.StartDate) Seller: @Html.DisplayFor(m => lot.SellerLogin)<br/>
                Category: @Html.DisplayFor(m => lot.SettedCategoryName)
            </p>
            @if (lot.IsSold)
            {
                <span>SOLD</span>
            }
            else
            {
                <a class="btn btn-sm" href="@Url.Action("LotDetails", "Lot", new {id = lot.Id})">Details</a>
            }
        </div>
        <div class="auctionInfo col-md-4 form-horizontal text-left" id="lotInfo">
            <div class="form-group" style="">
                @Html.LabelFor(m => lot.StartingBid, new {@class = "col-sm-6 control-label"})
                <span class="col-sm-6">@lot.StartingBid BYR</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => lot.StartDate, new {@class = "col-sm-6 control-label"})
                <span class="col-sm-6">@lot.StartDate.ToString("U")</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => lot.EndDate, new {@class = "col-sm-6 control-label"})
                <span class="col-sm-6">@lot.EndDate.ToString("U")</span>
            </div>
        </div>
    </div>
}





