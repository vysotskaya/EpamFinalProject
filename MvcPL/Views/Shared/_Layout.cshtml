<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="top-bar" class="navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="float: left; padding-top: 8px;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            <span style="font-size: 4em;">@Html.ActionLink("OnlineAuction", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 0.8em;" })</span>

            </div>
            <!-- main menu -->
            <nav class="collapse navbar-collapse navbar-center" role="navigation" style="float: right; width: 60%;">
                <div class="main-menu">
                    <ul class="nav navbar-nav navbar-left">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
        </div>
    </header>

    <section id="hero-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="block wow fadeInUp">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer id="footer">
        <div class="container">
            <div class="col-md-12" align="center">
                <p class="copyright">Copyright: <span>@DateTime.Now.Year</span></p>
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
